config {
	output = 2;
	reset_ext = yes;
	exec_directory = /var/run;
	log_directory = /var/log/honeybrid;
	log_file = debug.honeybrid.log;
	log_rotation = 0;
	debug_file = debug.honeybrid.debug;
	expiration_delay = 120;
}


module "hash" {
	function = hash;
	backup = /etc/honeybrid/hash.tb;
}

module "counter" {
	function = counter;
	counter  = 3;
}

module "control" {
	function = control;
	backup = /etc/honeybrid/control.tb;
	expiration = 600;
	max_packet = 1000;
}

module "control_strict" {
	function = control;
	backup = /etc/honeybrid/control_strict.tb;
	expiration = 3600;
	max_packet = 100;
}


target {
	filter "dst net 10.0.1.0/24"
	frontend 10.0.0.1 "hash";
	control "control_strict";
}

target {
	filter "host 192.168.0.1";
	frontend 10.0.0.1 "hash and counter";
	backend 10.0.0.2 "hash";
	control "control";
}

